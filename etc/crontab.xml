<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="searchspring_task">
        <job name="searchspring_task_execution" instance="SearchSpring\Feed\Cron\ExecuteTasks" method="execute">
            <schedule>* * * * *</schedule>
        </job>
        <job name="searchspring_fetched_feed_remove" instance="SearchSpring\Feed\Cron\RemoveFetchedFeeds" method="execute">
            <schedule>0 0 * * *</schedule>
        </job>
    </group>
</config>
